{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "esModuleInterop": true,
    "types": ["react", "react-dom", "react-router-dom", "jest", "fb", "facebook-js-sdk", "facebook-instant-games", "history", "node", "swiper"],
    "paths": {
      "Src/*": ["./src/*"],
      "SDK/*": ["./src/jssdk/*"],
      "DOM/*": ["./src/jssdk/DOM/*"],
      "Base/*": ["./src/jssdk/Base/*"]
    }
  },
  "include": [
    "./index.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.psd",
  ]
}
